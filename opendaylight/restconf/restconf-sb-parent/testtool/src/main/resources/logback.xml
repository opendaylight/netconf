<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="org.opendaylight.restconfsb.testtool.LogFilter"/>
        <encoder>
            <pattern>%highlight(%d{HH:mm:ss.SS} [%thread] %-5level %logger{36} - %msg%n)</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
