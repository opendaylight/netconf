<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:odl="http://opendaylight.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           odl:use-default-for-reference-types="true">

    <reference id="encryptionService"
               interface="org.opendaylight.aaa.encrypt.AAAEncryptionService" />
    <reference id="eventExecutor"
               interface="io.netty.util.concurrent.EventExecutor"
               odl:type="global-event-executor"/>

    <bean id="netconfCommunicatorFactory"
        class="org.opendaylight.netconf.nativ.netconf.communicator.NetconfDeviceCommunicatorInitializerFactoryImpl">
        <argument ref="encryptionService"/>
        <argument ref="eventExecutor"/>
    </bean>
    <service ref="netconfCommunicatorFactory"
         interface="org.opendaylight.netconf.nativ.netconf.communicator.NetconfDeviceCommunicatorInitializerFactory"
         odl:type="default"/>
</blueprint>
