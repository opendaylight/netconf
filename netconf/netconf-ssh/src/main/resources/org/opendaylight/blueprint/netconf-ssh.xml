<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:odl="http://opendaylight.org/xmlns/blueprint/v1.0.0"
           odl:restart-dependents-on-updates="true">

    <!--    NETCONF server for config-subsystem (listening by default on port 1830)-->

    <bean id="netconfConfigSubSystemServer"
          class="org.opendaylight.netconf.ssh.osgi.NetconfSSHActivator"
          init-method="start"
          destroy-method="stop">
        <argument ref="blueprintBundleContext"/>
    </bean>

</blueprint>
